{
  "extends": "@tsconfig/node14/tsconfig.json",

  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./lib",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "isolatedModules": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}